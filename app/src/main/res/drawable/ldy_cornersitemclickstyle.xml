<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <!-- 渐变效果 -->
            <gradient android:centerColor="@color/pagebgcolor" android:endColor="@color/pagebgcolor" android:startColor="@color/pagebgcolor"></gradient>
            <!-- 描边、边框 -->
            <stroke android:width="@dimen/corners" android:color="@color/pagebgcolor"></stroke>
            <!-- 圆角 -->
            <corners android:radius="@dimen/corners"></corners>
            <!-- 间隔 -->
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:centerColor="#ffffff" android:endColor="#ffffff" android:startColor="#ffffff"></gradient>
            <!-- 描边、边框 -->
            <stroke android:width="@dimen/corners" android:color="#ffffff"></stroke>

            <corners android:radius="@dimen/corners"></corners>
        </shape>
    </item>

</selector>