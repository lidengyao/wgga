<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pagebgcolor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ldy_cornersitemclickstyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/RightJianTou"
                style="@style/ItemRightJianTouStyle" />

            <LinearLayout
                android:id="@+id/RootLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@+id/RightJianTou"
                android:background="@color/color2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        style="@style/TitleStyle"
                        android:text="单位名称" />

                    <TextView
                        style="@style/ValueStyle"
                        android:text="" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView

                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="物品名称" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="登记时间" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView

                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="出入库类型" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="批准人" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView

                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="出库数量" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="入库数量" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView

                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="结存数量" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="桶号毛重" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView

                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="保管员1" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="保管员2" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView

                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="领用人1" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="领用人2" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView

                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="现场监管人" />

                        <TextView
                            android:id="@+id/nameTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:layout_height="wrap_content"
                            android:text="出库(毛重)" />

                        <TextView
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        style="@style/TitleStyle"
                        android:text="车间(毛重)" />

                    <TextView
                        style="@style/ValueStyle"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>