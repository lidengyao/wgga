<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pagebgcolor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ldy_cornersitemclickstyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/RightJianTou"
                style="@style/ItemRightJianTouStyle" />

            <LinearLayout
                android:id="@+id/RootLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@+id/RightJianTou"
                android:background="@color/color2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="姓名" />

                        <TextView
                            android:id="@+id/nameTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="身份证号" />

                        <TextView
                            android:id="@+id/certificateNumberTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        style="@style/TitleStyle"
                        android:text="所在单位" />

                    <TextView
                        android:id="@+id/companyValueTV"
                        style="@style/ValueStyle"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="文化程度" />

                        <TextView
                            android:id="@+id/culturalValueTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="性别" />

                        <TextView
                            android:id="@+id/genderValueTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="民族" />

                        <TextView
                            android:id="@+id/raceTypeValueTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="手机" />

                        <TextView
                            android:id="@+id/telTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TitleStyle"
                        android:text="岗位" />

                    <TextView
                        android:id="@+id/nowDutyTV"
                        style="@style/ValueStyle"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="申请日期" />

                        <TextView
                            android:id="@+id/createTimeTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TitleStyle"
                            android:text="修改日期	" />

                        <TextView
                            android:id="@+id/updateTimeTV"
                            style="@style/ValueStyle"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TitleStyle"
                        android:text="状态" />

                    <TextView
                        android:id="@+id/statusTV"
                        style="@style/ValueStyle"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>