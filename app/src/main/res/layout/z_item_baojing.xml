<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color22"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginLeft="@dimen/bianju"
        android:layout_marginRight="@dimen/bianju"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ldy_cornersitemclickstyle">


        <LinearLayout
            android:id="@+id/JianTouLL"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/jianTouIV"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/jiantou" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/itempengRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/JianTouLL">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TitleTV"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="整改通知1"
                        android:textColor="@color/color17"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/StatusTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="未处理"
                        android:textColor="@color/color26"
                        android:textSize="@dimen/textsize14" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/CreateTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="发生时间：2018-06-23 13:33:58"
                    android:textColor="@color/color6"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/YiChuLiDealTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理时间：2018-06-23 13:33:58"
                    android:textColor="@color/color6"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>