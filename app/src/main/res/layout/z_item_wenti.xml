<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color22"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color22">

        <RelativeLayout
            android:id="@+id/itempengRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处理意见："
                    android:textColor="@color/color1"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/ContentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="按实际旮旯科技馆"
                    android:textColor="@color/color23"
                    android:textSize="@dimen/textsize13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ItemRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:overScrollMode="never" />
                </LinearLayout>

                <TextView
                    android:id="@+id/ChuliRenTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="处理人：张三"
                    android:textColor="@color/color25"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/ChuLiTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="处理时间：2019-09-09 09:00:00"
                    android:textColor="@color/color25"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/ItemLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginLeft="@dimen/bianju"
        android:layout_marginRight="@dimen/bianju"
        android:background="@color/linecolor"></View>
</LinearLayout>